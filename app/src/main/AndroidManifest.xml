<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.ddr1.lalajo">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <permission
        android:name="com.ddr1.lalajo.movie.READ_DATABASE"
        android:protectionLevel="normal" />
    <permission
        android:name="com.ddr1.lalajo.movie.WRITE_DATABASE"
        android:protectionLevel="normal" />

    <application
        android:allowBackup="true"
        android:fullBackupContent="@xml/backup_descriptor"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name=".view.toolbar.SearchTVActivity" />
        <activity android:name=".view.toolbar.SearchMovieActivity" />
        <activity
            android:name=".view.toolbar.NotifActivity"
            android:parentActivityName=".MainActivity" />

        <receiver android:name=".widget.ImageBannerWidget">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/image_banner_widget_info" />
        </receiver>
        <receiver
            android:name=".notification.DailyReminder"
            android:enabled="true"
            android:exported="true"
            android:permission="true"
            tools:ignore="ExportedReceiver" />
        <receiver
            android:name=".notification.ReleaseReminder"
            android:enabled="true"
            android:exported="true"
            android:permission="true"
            tools:ignore="ExportedReceiver" />

        <activity
            android:name=".view.movies.DetailMovieActivity"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name=".view.tvshows.DetailTVActivity"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <provider
            android:name=".provider.MovieProvider"
            android:authorities="com.ddr1.lalajo.movie"
            android:exported="true"
            android:readPermission="com.ddr1.lalajo.movie.READ_DATABASE"
            android:writePermission="com.ddr1.lalajo.movie.WRITE_DATABASE" />
        <provider
            android:name=".provider.TVProvider"
            android:authorities="com.ddr1.lalajo.tv"
            android:grantUriPermissions="true"
            android:exported="true"
            android:readPermission="com.ddr1.lalajo.tv.READ_DATABASE"
            android:writePermission="com.ddr1.lalajo.tv.WRITE_DATABASE" />

        <service
            android:name=".widget.StackWidgetService"
            android:permission="android.permission.BIND_REMOTEVIEWS" />
    </application>

</manifest>