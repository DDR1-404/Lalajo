<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.ddr1.lalajo">

    <uses-permission android:name="android.permission.INTERNET" />
    <permission android:name="com.ddr1.lalajo.READ_DATABASE" android:protectionLevel="normal" />
    <permission android:name="com.ddr1.lalajo.WRITE_DATABASE" android:protectionLevel="normal" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning"
        android:fullBackupContent="@xml/backup_descriptor">
        <activity android:name=".view.tvshows.DetailTVActivity" />
        <activity android:name=".view.movies.DetailMovieActivity" />
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <provider
            android:authorities="com.ddr1.lalajo"
            android:name=".provider.MovieProvider"
            android:exported="true"
            android:readPermission="com.ddr1.lalajo.READ_DATABASE"
            android:writePermission="com.ddr1.lalajo.WRITE_DATABASE" />

    </application>

</manifest>